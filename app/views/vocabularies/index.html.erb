<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>英単語アプリ</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      text-align: center;
      font-family: Arial, sans-serif;
      background-size: cover;
      background-position: center;
      transition: background 1s ease-in-out;
    }
    
    .container {
      background: rgba(255, 255, 255, 0.8); /* 背景を半透明に */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      max-width: 400px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 10px;
    }

    p {
      font-size: 18px;
      margin: 5px 0;
    }
  </style>
  <script>
    const backgrounds = [
      "/assets/bg1.jpg",
      "/assets/bg2.jpg",
      "/assets/bg3.jpg",
      "/assets/bg4.jpg"
    ];

    function updateWord() {
      fetch('/vocabularies/random')
        .then(response => response.json())
        .then(data => {
          document.getElementById("word").innerText = data.word;
          document.getElementById("translation").innerText = data.translation;
          document.getElementById("example_sentence").innerText = data.example_sentence;
          document.getElementById("example_translation").innerText = data.example_translation;
        });
    }

    function updateBackground() {
      const randomIndex = Math.floor(Math.random() * backgrounds.length);
      document.body.style.backgroundImage = `url(${backgrounds[randomIndex]})`;
    }

    setInterval(updateWord, 5000);
    setInterval(updateBackground, 5000);

    window.onload = () => {
      updateWord();
      updateBackground();
    };
  </script>
</head>
<body>
  <div class="container">
    <h1>英単語アプリ</h1>
    <p><strong>単語:</strong> <span id="word"></span></p>
    <p><strong>訳:</strong> <span id="translation"></span></p>
    <p><strong>例文:</strong> <span id="example_sentence"></span></p>
    <p><strong>例文訳:</strong> <span id="example_translation"></span></p>
  </div>
</body>
</html>
